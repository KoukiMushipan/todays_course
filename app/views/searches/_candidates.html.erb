<div class="swiper swiper-container-<%= number %>" data-controller='swiper'>
  <div class="swiper-wrapper">
    <%= render partial: 'candidate', collection: candidates %>
  </div>
  <div class="swiper-pagination swiper-pagination-<%= number %> !bottom-0"></div>
  <div class="swiper-button-next swiper-button-next-<%= number %> !right-0.5 sm:!right-5 !text-cyan-600/80"></div>
  <div class="swiper-button-prev swiper-button-prev-<%= number %> !left-0.5 sm:!left-5 !text-cyan-600/80"></div>
</div>
