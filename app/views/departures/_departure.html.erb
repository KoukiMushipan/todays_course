<div class="info-card keep-all zen-kaku-regular swiper-slide">
  <p class="mb-1.5 text-left text-gray-700">
    <%= fa_icon 'floppy-o' %>
    <span class="ml-1"><%= l(departure.created_at, format: :short) %></span>
  </p>
  <h5 class="mb-1 text-3xl text-gray-800 zen-kaku-medium">
    <%= departure.location.name %>
  </h5>
  <p class="mb-3 text-gray-700">
    <%= departure.location.address %>
  </p>
  <div class="justify-center">
    <%= link_to '決定', new_search_path(departure: departure.uuid),
    class: 'orange-btn inline-flex w-5/12 sm:w-1/6 py-2 justify-center tracking-widest text-xl zen-kaku-medium' %>
  </div>
</div>
