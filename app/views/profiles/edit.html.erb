<div class="basic-card zen-kaku-regular">
  <%= turbo_frame_tag 'profile' do %> <%# profile#showと入れ替わる用 %>
    <%= render 'shared/toast' if is_turbo_frame_request? %> <%# profile#updateのバリデーションエラー用 %>

    <%= form_with model: @user, url: profile_path, class: 'zen-kaku-medium' do |f| %>
      <div class="my-5 text-left">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'normal-form', required: true %>
        <%= render partial: 'shared/error_message', collection: @user.errors.full_messages_for(:name) %>
      </div>

      <div class="my-5 text-left">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'normal-form', required: true %>
        <%= render partial: 'shared/error_message', collection: @user.errors.full_messages_for(:email) %>
      </div>

      <div class="my-5 text-right zen-kaku-regular text-xl tracking-wider">
        <%= link_to '取消', cancel_profile_path, class: 'border-orange-btn px-5 py-2' %>
        <%= f.submit '更新', class: 'orange-btn px-5 py-2.5' %>
      </div>
    <% end %>
  <% end %>
</div>
