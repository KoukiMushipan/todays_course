<% content_for(:title, 'スタート') %>

<div id="map"></div>
<p class='zen-kaku-regular text-xl tracking-wider' id='js-show-distance'></p>

<%= turbo_frame_tag 'destination-form' do %>
  <div class="info-card keep-all zen-kaku-regular swiper-slide">
    <div class="text-left mb-1 lg:mb-0 text-gray-700">
      <p class="mr-0 lg:mr-3 block lg:inline-block">
        <%= fa_icon 'floppy-o' %>
        <span class="ml-1">
          <% if @destination_info[:created_at] %>
            <%= l(@destination_info[:created_at], format: :short) %>
          <% else %>
            未保存
          <% end %>
        </span>
      </p>
      <p class="block lg:inline-block">
        <%= fa_icon 'home' %>
        <span><%= @departure_info[:name] %></span>
      </p>
    </div>
    <div class="text-gray-800 text-3xl zen-kaku-medium">
      <h5 class="mr-0 lg:mr-5 block lg:inline-block">
        <%= fa_icon 'flag' %>
        <%= @destination_info[:name] %>
      </h5>
      <h5 class="block sm:inline-block">
        <%= fa_icon 'road' %>
        <%= @destination_info[:distance] %>m
      </h5>
    </div>
    <p class="text-gray-700"><%= @destination_info[:address] %></p>
  </div>

  <%= turbo_frame_tag 'start-button-field' do %>
    <div class="text-center my-5">
      <%= link_to 'スタート(片道)', '#',
      data: { turbo_method: :post },
      class: 'orange-btn tracking-widest text-xl px-12 py-3 sm:mr-12 zen-kaku-medium mb-5 sm:mb-0 block sm:inline-block' %>

      <%= link_to 'スタート(往復)', '#',
      data: { turbo_method: :post },
      class: 'orange-btn tracking-widest text-xl px-12 py-3 zen-kaku-medium block sm:inline-block' %>
    </div>
  <% end %>
<% end %>

<%= include_gon %>
<%= javascript_include_tag Settings.google.map_url + 'callback=showRoute', defer: 'defer' %>
