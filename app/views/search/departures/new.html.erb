<h1 class="headline zen-kaku-bold">出発地</h1>
<div class="tabs">
  <input id="left" type="radio" name="tab-radio-button" checked>
  <label class="tab-item zen-kaku-bold" for="left">入力</label>

  <input id="center" type="radio" name="tab-radio-button">
  <label class="tab-item zen-kaku-bold" for="center">保存</label>

  <input id="right" type="radio" name="tab-radio-button">
  <label class="tab-item zen-kaku-bold" for="right">履歴</label>

  <div class="tab-content" id="left-content">
    <%= render 'form' %>
  </div>

  <div class="tab-content" id="center-content">
    <%= render partial: 'departure', collection: @departures %>
  </div>

  <div class="tab-content" id="right-content">
    <%= render partial: 'history', collection: @histories %>
  </div>
</div>
